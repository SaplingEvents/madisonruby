!!! 5
%html(lang="en-US")
  %head
    %title Madison Ruby
    %meta(charset="UTF-8")
    = stylesheet_link_tag "application"
    = yield :head

    %script{:type=>"text/javascript", :src=>"http://use.typekit.com/uob4zuw.js"}
    :javascript
      try{Typekit.load();}catch(e){}

  %body
    %header
      %section
        %h1= link_to "Madison Ruby", "/"
        %nav
          %ul
            %li= link_to "Home", home_path
            %li= link_to "Speakers", speakers_path
            %li.register= link_to "Register", "http://madisonruby.chirrpy.com/"
        %p
          %mark(data-after_content="$") August 18-20, 2011
          Madison, WI
    #masthead
      .register
        %h1 Madision Ruby Conference
        %p
          Discover a hidden
          %strong gem
          in Madison, Wisconsin
        = link_to "http://madisonruby.chirrpy.com/" do
          %span Register Now
        -# %p.price $350
    #content
      = yield

    %footer
      %p!= "Copyright &copy; 2011 Madison Ruby Conference"

    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));

      try{
      var pageTracker = _gat._getTracker("UA-17866845-1");
      pageTracker._trackPageview();
      } catch(err) {}
